<h1>Editing Books</h1>

<%= form_with model: @book, method: :patch do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'CreateUpdate book' %>

<% end%>

<span>
<%= link_to 'Show', book_path %> |
<%= link_to 'Back', books_path %>
</span>
